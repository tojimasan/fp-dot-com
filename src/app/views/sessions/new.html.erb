<div class="text-dark py-4">
    <% if flash[:danger] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:danger] %>
        </div>
    <% end %>
    <div class="col-md-12 col-md-offset-3">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :name %>
        <span class="text-secondary">(クライアント・FPどちらでもOK)</span>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.submit "ログイン", class: "btn btn-primary my-3" %>
        <% end %>

        <div class="d-flex justify-content-start">
            <p style="margin-right: 1rem;"><%= link_to "クライアント新規登録画面へ", new_client_path, { class: "text-decoration-none"} %></p>
            <p><%= link_to "FP新規登録画面へ", new_financial_planner_path, { class: "text-decoration-none"} %></p>
        </div>
    </div>
</div>
